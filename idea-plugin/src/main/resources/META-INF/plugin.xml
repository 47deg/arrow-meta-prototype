<idea-plugin>
<id>arrow-plugin</id>
<name>Arrow</name>

<vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

<description><![CDATA[
    The Arrow Intellij IDEA plugin.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

<!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
     on how to target different products -->
<!-- uncomment to enable plugin in all products
<depends>com.intellij.modules.lang</depends>
-->

<depends>org.jetbrains.plugins.gradle</depends>
<depends>org.jetbrains.kotlin</depends>
<extensions defaultExtensionNs="com.intellij">
    <!--<typeHierarchyProvider language="kotlin" implementationClass="arrow.meta.plugin.idea.ArrowTypeHierarchyProvider"/>-->


    <!-- Singleton
    <projectService serviceInterface="org.jetbrains.kotlin.resolve.lazy.declarations.DeclarationProviderFactoryService"
                    serviceImplementation="arrow.meta.plugin.idea.ArrowDeclarationProviderFactoryService"/>-->
    <typeDeclarationProvider implementation="arrow.meta.plugin.idea.ArrowTypeDeclarationProvider"/>

    <localInspection implementationClass="arrow.meta.plugin.idea.inspection.AddSuspendedModifierInspection"
                     displayName="Function should have suspend modifier"
                     groupPath="Kotlin"
                     groupName="Style issues"
                     enabledByDefault="true"
                     level="ERROR"
                     language="kotlin"
    />
    <codeInsight.lineMarkerProvider language="kotlin" implementationClass="arrow.meta.plugin.idea.icon.ImpureLineMarkerProvider"/>
    <iconProvider implementation="arrow.meta.plugin.idea.icon.ArrowIconProvider"
    order="first"/>
    <!--<elementDescriptionProvider
            implementation="arrow.meta.plugin.idea.ArrowElementDescriptionProvider"
            order="first"/>-->

</extensions>
<extensions defaultExtensionNs="org.jetbrains.kotlin">
    <gradleProjectImportHandler implementation="arrow.meta.plugin.idea.ArrowGradleImportHandler" />
</extensions>


</idea-plugin>